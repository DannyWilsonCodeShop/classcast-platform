{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Sid": "AllowAmplifyServiceRole",
      "Effect": "Allow",
      "Principal": {
        "AWS": "arn:aws:iam::463470937777:role/amplify-classcast-service-role"
      },
      "Action": [
        "s3:GetObject",
        "s3:PutObject",
        "s3:DeleteObject",
        "s3:GetObjectVersion",
        "s3:PutObjectAcl",
        "s3:GetObjectAcl"
      ],
      "Resource": "arn:aws:s3:::classcast-videos-463470937777-us-east-1/*"
    },
    {
      "Sid": "AllowAmplifyServiceRoleListBucket",
      "Effect": "Allow",
      "Principal": {
        "AWS": "arn:aws:iam::463470937777:role/amplify-classcast-service-role"
      },
      "Action": [
        "s3:ListBucket",
        "s3:GetBucketLocation"
      ],
      "Resource": "arn:aws:s3:::classcast-videos-463470937777-us-east-1"
    },
    {
      "Sid": "AllowPresignedUrlUploads",
      "Effect": "Allow",
      "Principal": "*",
      "Action": [
        "s3:PutObject"
      ],
      "Resource": "arn:aws:s3:::classcast-videos-463470937777-us-east-1/*",
      "Condition": {
        "StringEquals": {
          "s3:x-amz-server-side-encryption": "AES256"
        }
      }
    },
    {
      "Sid": "AllowPublicReadForUploadedFiles",
      "Effect": "Allow",
      "Principal": "*",
      "Action": [
        "s3:GetObject"
      ],
      "Resource": "arn:aws:s3:::classcast-videos-463470937777-us-east-1/*"
    }
  ]
}
